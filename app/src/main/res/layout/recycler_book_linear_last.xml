<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/recycler_book_linear_last"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/linear_book_cover"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/add_book_cover"
        android:scaleType="fitXY"
        android:contentDescription="@string/book_cover" />

    <TextView
        android:id="@+id/linear_book_title"
        android:layout_toEndOf="@id/linear_book_cover"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/add_local_book"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:textColor="@color/black"/>

</RelativeLayout>